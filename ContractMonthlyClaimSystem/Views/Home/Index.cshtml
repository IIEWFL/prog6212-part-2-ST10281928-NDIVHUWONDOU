@{
    ViewData["Title"] = "Home";
}

<section class="hero glass-card gradient-1 mb-4">
    <div class="p-4 p-lg-5 d-flex flex-column flex-lg-row align-items-center gap-4">
        <div class="flex-grow-1">
            <h1 class="display-6 fw-semibold mb-2">
                Manage <span class="brand-underline">Monthly Claims</span> with confidence
            </h1>
            <p class="lead text-muted mb-4">
                A clean, fast, and consistent experience for lecturers and administrators—no fuss, just productivity.
            </p>
            <div class="d-flex gap-2 flex-wrap">
                <a class="btn btn-brand" asp-controller="Lecturer" asp-action="Index">
                    <i class="bi bi-person-badge"></i> Lecturer Portal
                </a>
                <a class="btn btn-outline-brand" asp-controller="Claim" asp-action="Index">
                    <i class="bi bi-receipt"></i> Claims Dashboard
                </a>
                <a class="btn btn-soft" asp-controller="Home" asp-action="Privacy">
                    <i class="bi bi-shield-check"></i> Privacy
                </a>
            </div>
        </div>
        <div class="hero-stat d-flex gap-3">
            <div class="stat-tile">
                <div class="stat-value">Fast</div>
                <div class="stat-label">Load & Navigate</div>
            </div>
            <div class="stat-tile">
                <div class="stat-value">Clean</div>
                <div class="stat-label">Simple Workflows</div>
            </div>
            <div class="stat-tile">
                <div class="stat-value">Consistent</div>
                <div class="stat-label">Unified Styles</div>
            </div>
        </div>
    </div>
</section>

<section class="mb-4">
    <div class="row g-3">
        <div class="col-md-4">
            <div class="card soft-card h-100">
                <div class="card-body">
                    <div class="icon-wrap"><i class="bi bi-clipboard2-check"></i></div>
                    <h5 class="card-title mb-2">Submit Claims</h5>
                    <p class="text-muted mb-3">Lecturers create monthly claims with a few clicks.</p>
                    <a asp-controller="Lecturer" asp-action="Create" class="btn btn-brand-soft">
                        <i class="bi bi-plus-circle"></i> New Claim
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card soft-card h-100">
                <div class="card-body">
                    <div class="icon-wrap"><i class="bi bi-columns-gap"></i></div>
                    <h5 class="card-title mb-2">Track & Review</h5>
                    <p class="text-muted mb-3">Browse all claims, filter by status, and open details fast.</p>
                    <a asp-controller="Claim" asp-action="Index" class="btn btn-brand-soft">
                        <i class="bi bi-list-ul"></i> View Claims
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card soft-card h-100">
                <div class="card-body">
                    <div class="icon-wrap"><i class="bi bi-shield-lock"></i></div>
                    <h5 class="card-title mb-2">Policy & Privacy</h5>
                    <p class="text-muted mb-3">Understand how your information is handled in the system.</p>
                    <a asp-controller="Home" asp-action="Privacy" class="btn btn-brand-soft">
                        <i class="bi bi-shield-check"></i> Privacy
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="mb-5">
    <div class="card glass-card">
        <div class="card-body p-4">
            <h5 class="mb-3"><i class="bi bi-lightbulb"></i> How it works</h5>
            <div class="row g-3">
                <div class="col-md-4">
                    <div class="step">
                        <div class="step-number">1</div>
                        <div class="step-body">
                            <h6>Lecturer submits a claim</h6>
                            <p class="text-muted mb-0">Use the Lecturer Portal to create and submit monthly claims.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="step">
                        <div class="step-number">2</div>
                        <div class="step-body">
                            <h6>Admin reviews the claim</h6>
                            <p class="text-muted mb-0">Admins review, verify details, and keep everything tracked.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="step">
                        <div class="step-number">3</div>
                        <div class="step-body">
                            <h6>Status stays in sync</h6>
                            <p class="text-muted mb-0">See Pending / Approved / Rejected at a glance in the dashboard.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
